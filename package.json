{
  "name": "root",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "lerna": "^3.20.2",
    "release-it": "^13.5.8",
    "release-it-yarn-workspaces": "^1.4.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false,
      "requireUpstream": false
    },
    "npm": false
  }
}
